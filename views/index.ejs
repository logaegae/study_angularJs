<!DOCTYPE html>
<html>
    <head>
    <%- include ./blocks/layout.ejs %>
    <script>
        var app = angular.module('indexPage', []);
        app.controller('indexPageCtrl',function($scope){
            $scope.list = [
                {
                    title:'Todo list',
                    link:'todo.ejs'
                },{
                    title:'menu',
                    link:'menu.ejs'
                },{
                    title:'switch',
                    link:'switch.ejs'
                },{
                    title:'if',
                    link:'if.ejs'
                },{
                    title:'form',
                    link:'form.ejs'
                },{
                    title:'event',
                    link:'event.ejs'
                },{
                    title:'scope',
                    link:'scope.ejs'
                },{
                    title:'directive',
                    link:'directive.ejs'
                },{
                    title:'transclude',
                    link:'transclude.ejs'
                }
            ]
        });
    </script>
    </head>
    <body ng-app="indexPage" ng-controller="indexPageCtrl">
        <div class="container">
            <br>
            <h1><%= title %></h1>
            <p>Welcome to <%= title %> Page</p>
            <p>This project was generated by express generator</p>
            <hr>
            <br><br>
            <p>list</p>
            <ul>
                <li ng-repeat="item in list"><a href="{{item.link}}">{{item.title}}</a></li>
            </ul>
        </div>
    </body>
</html>
